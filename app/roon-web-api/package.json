{
  "name": "@nihilux/roon-web-api",
  "version": "0.0.13",
  "private": true,
  "main": "bin/app.js",
  "license": "MIT",
  "scripts": {
    "build": "bun build --production --compile --minify --sourcemap --compile-autoload-package-json --external node-roon-api-audioinput --external node-roon-api-browse --external node-roon-api-image --external node-roon-api-settings --external node-roon-api-status --external node-roon-api-transport  src/app.ts --outfile=bin/roon-web-api",
    "build:debug": "bun build --production --sourcemap --minify --external node-roon-api-audioinput --external node-roon-api-browse --external node-roon-api-image --external node-roon-api-settings --external node-roon-api-status --external node-roon-api-transport  --target=bun src/app.ts --outdir=bin",
    "clean": "rimraf bin",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "start": "bun run clean && NODE_ENV=development LOG_LEVEL=debug  bun --hot --inspect src/app.ts",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@fastify/compress": "8.3.1",
    "@fastify/static": "9.0.0",
    "@nihilux/roon-web-model": "workspace:*",
    "fastify": "5.7.4",
    "fastify-graceful-shutdown": "5.0.0",
    "fastify-plugin": "5.1.0",
    "fastify-sse-v2": "4.2.2",
    "nanoid": "5.1.6",
    "node-roon-api": "github:roonlabs/node-roon-api",
    "node-roon-api-audioinput": "github:roonlabs/node-roon-api-audioinput",
    "node-roon-api-browse": "github:roonlabs/node-roon-api-browse",
    "node-roon-api-image": "github:roonlabs/node-roon-api-image",
    "node-roon-api-settings": "github:roonlabs/node-roon-api-settings",
    "node-roon-api-status": "github:roonlabs/node-roon-api-status",
    "node-roon-api-transport": "github:roonlabs/node-roon-api-transport",
    "pino": "10.3.0",
    "rxjs": "7.8.2",
    "ts-retry-promise": "0.8.1",
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@types/bun": "1.3.6",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "prettier": "3.8.1",
    "rimraf": "6.1.2",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18"
  }
}
