{
  "name": "@nihilux/roon-web-stack",
  "version": "0.0.13",
  "description": "a web stack, from api to web client, to use roon ia a browser",
  "private": true,
  "author": "nihil@nihilux.org",
  "license": "MIT",
  "workspaces": [
    "packages/*",
    "app/*"
  ],
  "catalogs": {
    "angular": {
      "@angular/animations": "21.1.4",
      "@angular/common": "21.1.4",
      "@angular/compiler": "21.1.4",
      "@angular/core": "21.1.4",
      "@angular/forms": "21.1.4",
      "@angular/material": "21.1.4",
      "@angular/platform-browser": "21.1.4",
      "@angular/platform-browser-dynamic": "21.1.4",
      "@angular-eslint/builder": "21.2.0",
      "@angular-eslint/eslint-plugin": "21.2.0",
      "@angular-eslint/eslint-plugin-template": "21.2.0",
      "@angular-eslint/schematics": "21.2.0",
      "@angular-eslint/template-parser": "21.2.0",
      "@angular/build": "21.1.4",
      "@angular/cdk": "21.1.4",
      "@angular/cli": "21.1.4",
      "@angular/compiler-cli": "21.1.4",
      "angular-eslint": "21.2.0",
      "ngx-device-detector": "11.0.0",
      "ng-mocks": "14.15.1",
      "ng-packagr": "21.1.0"
    },
    "lib": {
      "@types/bun": "1.3.9",
      "fast-equals": "6.0.0",
      "hono": "4.11.9",
      "nanoid": "5.1.6",
      "pino": "10.3.1",
      "rxjs": "7.8.2",
      "ts-retry-promise": "0.8.1",
      "tslib": "2.8.1",
      "typescript": "5.9.3"
    },
    "lint": {
      "@eslint/js": "9.39.2",
      "@typescript-eslint/eslint-plugin": "8.55.0",
      "@typescript-eslint/parser": "8.55.0",
      "eslint": "9.39.2",
      "eslint-config-prettier": "10.1.8",
      "eslint-import-resolver-typescript": "4.4.4",
      "eslint-plugin-import": "2.32.0",
      "eslint-plugin-prettier": "5.5.5",
      "eslint-plugin-promise": "7.2.1",
      "eslint-plugin-simple-import-sort": "12.1.1",
      "eslint-plugin-unused-imports": "4.4.1",
      "prettier": "3.8.1",
      "typescript-eslint": "8.55.0"
    },
    "test": {
      "@vitest/coverage-istanbul": "4.0.18",
      "@vitest/coverage-v8": "4.0.18",
      "happy-dom": "20.6.1",
      "vite-tsconfig-paths": "6.1.1",
      "vitest": "4.0.18",
      "vitest-fetch-mock": "0.4.5"
    }
  },
  "engines": {
    "bun": "1.3.9"
  },
  "packageManager": "bun@1.3.9",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nihilux-org/roon-web-stack.git"
  },
  "scripts": {
    "build": "bun run --filter '*' --if-present build",
    "lint": "bun run --filter '*' lint",
    "lint:fix": "bun run --filter '*' lint:fix",
    "test": "bun run --filter '*' test",
    "backend": "bun run --filter @nihilux/roon-web-api start",
    "frontend": "bun run --filter @nihilux/roon-web-client build && bun run --filter @nihilux/roon-web-ng-client serve",
    "ci": "bun install --frozen-lockfile && bun run build && bun run lint && bun run test",
    "cd": "bun install --frozen-lockfile && bun run --sequential build",
    "cd:debug": "bun install --frozen-lockfile && bun run build:debug"
  }
}
