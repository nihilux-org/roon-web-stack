{
  "name": "@nihilux/roon-web-client",
  "version": "0.0.13",
  "main": "bin/roon-web-client.js",
  "typings": "bin/index.d.ts",
  "license": "MIT",
  "type": "module",
  "private": true,
  "exports": {
    ".": {
      "types": "./bin/src/index.d.ts",
      "import": "./bin/roon-web-client.js",
      "default": "./bin/roon-web-client.js"
    }
  },
  "scripts": {
    "build": "bun run src/build.ts build",
    "build:old": "bun build --minify src/index.ts --outfile bin/roon-web-client.js && bun run build:declaration",
    "build:declaration": "tsc --emitDeclarationOnly --project tsconfig.types.json",
    "clean": "bun run src/build.ts build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest"
  },
  "dependencies": {
    "tslib": "2.8.1"
  },
  "devDependencies": {
    "@eslint/js": "9.39.2",
    "@nihilux/roon-web-model": "workspace:*",
    "@types/bun": "1.3.8",
    "@typescript-eslint/eslint-plugin": "8.54.0",
    "@typescript-eslint/parser": "8.54.0",
    "@vitest/coverage-v8": "4.0.18",
    "eslint": "9.39.2",
    "eslint-config-prettier": "10.1.8",
    "eslint-import-resolver-typescript": "4.4.4",
    "eslint-plugin-import": "2.32.0",
    "eslint-plugin-prettier": "5.5.5",
    "eslint-plugin-promise": "7.2.1",
    "eslint-plugin-simple-import-sort": "12.1.1",
    "eslint-plugin-unused-imports": "4.3.0",
    "happy-dom": "20.5.0",
    "prettier": "3.8.1",
    "typescript": "5.9.3",
    "typescript-eslint": "8.54.0",
    "vite-tsconfig-paths": "6.0.5",
    "vitest": "4.0.18",
    "vitest-fetch-mock": "0.4.5"
  }
}
